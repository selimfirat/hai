<BorderPane prefHeight="500.0" prefWidth="1000.0" stylesheets="@main.css" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hai.gui.MainController">
    <center>
        <StackPane>
            <children>
                <BorderPane fx:id="mainBorderPane">
                    <top>
                        <VBox>
                            <children>
                                <MenuBar fx:id="menuBar">
                                    <menus>
                                        <Menu fx:id="menuFile" mnemonicParsing="false" text="File">
                                            <items>
                                                <MenuItem fx:id="menuNew" accelerator="Shortcut+N" mnemonicParsing="false" text="New..." />
                                                <SeparatorMenuItem mnemonicParsing="false" />
                                                <MenuItem fx:id="menuExit" mnemonicParsing="false" text="Exit VocabHunter" />
                                            </items>
                                        </Menu>
                                    </menus>
                                </MenuBar>
                                <ToolBar>
                                    <items>
                                        <Button fx:id="buttonNew" mnemonicParsing="false" styleClass="buttonNew" text="New">
                                            <tooltip>
                                                <Tooltip text="Analyse a NY Times Puzzle and start a new session" />
                                            </tooltip>
                                            <graphic>
                                                <FontAwesomeIconView styleClass="buttonNewIcon" />
                                            </graphic>
                                        </Button>
                                        <Separator orientation="VERTICAL" />
                                        <CheckBox fx:id="buttonEnableLogs" mnemonicParsing="false" selected="true" text="Enable Logs">
                                            <tooltip>
                                                <Tooltip text="Hide words using the filters" />
                                            </tooltip>
                                        </CheckBox>
                                        <Separator orientation="VERTICAL" />
                                        <CheckBox fx:id="buttonEnableMrHai" mnemonicParsing="false" selected="true" text="Enable Mr. Hai">
                                            <tooltip>
                                                <Tooltip text="Let hai speak!" />
                                            </tooltip>
                                        </CheckBox>
                                    </items>
                                </ToolBar>
                            </children>
                        </VBox>
                    </top>
                    <center>
                        <VBox alignment="CENTER" styleClass="noSession">
                            <children>
                                <HBox alignment="CENTER">
                                    <children>
                                        <Text styleClass="title,left" text="Bilkent" />
                                        <Text styleClass="title,right" text="Hai" />
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER">
                                    <children>
                                        <GridPane>
                                            <columnConstraints>
                                                <ColumnConstraints hgrow="NEVER" />
                                                <ColumnConstraints hgrow="ALWAYS" />
                                            </columnConstraints>
                                            <rowConstraints>
                                                <RowConstraints />
                                                <RowConstraints />
                                            </rowConstraints>
                                            <children>
                                                <Label styleClass="new">
                                                    <graphic>
                                                        <FontAwesomeIconView styleClass="buttonNewIcon" />
                                                    </graphic>
                                                </Label>
                                                <Label styleClass="new" text="Choose 'New' to analyse a crossword and start a new session." GridPane.columnIndex="1" />
                                            </children>
                                        </GridPane>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </center>
                </BorderPane>
                <Pane fx:id="maskerPane" styleClass="masker" visible="false" />
            </children>
        </StackPane>
    </center>
    <bottom>
        <StatusBar fx:id="statusBar" BorderPane.alignment="CENTER" />
    </bottom>
</BorderPane>
